{
  "name": "step-into-story-time",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "validate": "npm run lint && npm run type:check && npm test",
    "prepare": "husky install",
    "secrets:generate": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-secrets.ps1",
    "secrets:scan": "npx trufflehog filesystem .",
    "pre-commit": "npx trufflehog filesystem .",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:clean": "powershell -Command \"Remove-Item -Path .next -Recurse -Force; next clean\"",
    "format": "prettier --write .",
    "fix:types": "node scripts/type-migration.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.29.7",
    "@emotion/is-prop-valid": "^1.3.1",
    "@opentelemetry/api": "^1.9.0",
    "@types/uuid": "^10.0.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/kv": "^0.2.4",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.0",
    "dotenv": "^16.0.3",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.475.0",
    "next": "^15.1.7",
    "openai": "^4.29.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.62",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  }
}
