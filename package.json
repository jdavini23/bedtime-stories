{
  "name": "bedtime-stories",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "npx husky install",
    "secrets:generate": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-secrets.ps1",
    "secrets:scan": "npx trufflehog filesystem .",
    "pre-commit": "npx trufflehog filesystem .",
    "test": "vitest -c vitest.config.cjs",
    "test:ui": "vitest --ui -c vitest.config.cjs",
    "test:coverage": "vitest run --coverage -c vitest.config.cjs",
    "test:firebase": "ts-node --project tsconfig.json scripts/test-firebase.ts",
    "build:clean": "powershell -Command \"Remove-Item -Path .next -Recurse -Force; next clean\""
  },
  "dependencies": {
    "@clerk/nextjs": "^4.29.7",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@types/uuid": "^10.0.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/kv": "^3.0.0",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "firebase": "^11.3.1",
    "firebase-admin": "^13.1.0",
    "framer-motion": "^12.4.3",
    "geist": "^1.3.1",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "next-auth": "^4.24.11",
    "openai": "^4.20.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.4.0",
    "tailwind-merge": "^3.0.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/next": "^8.0.7",
    "@types/node": "^20.17.19",
    "@types/react": "^19.0.10",
    "@vitest/ui": "^3.0.6",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^3.0.6"
  },
  "lint-staged": {
    "*": [
      "npx trufflehog filesystem ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
